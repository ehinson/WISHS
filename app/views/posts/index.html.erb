<p>
<%= render 'shared/content_title', title: "All Posts"  %>
</p>


<%  @posts.each do |post|  %>
<div class="row">
  <fieldset>
    <%= render post.categories  %>
    <h4><%= link_to post.title, post.url %></h4>
    <p><%= post.reaction  %></p>
    <p><span class ="quiet">posted by</span> <%= post.user.username unless post.user.blank? %>
      <small>at <%= post.created_at  %></small></p>
      <span> <%= link_to( "#{post.comments.size} comments", post_path(post))  %></span>
      <span><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
  </fieldset>
  </div>
  <%  end  %>

<%= link_to 'New Post', new_post_path %>
